<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/ll_success_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp16w"
        android:paddingRight="@dimen/dp16w"
        android:paddingBottom="@dimen/dp16w">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/iv_success_image"
                android:layout_width="@dimen/dp60h"
                android:layout_height="@dimen/dp60h"
                android:layout_marginTop="@dimen/dp16w"
                android:layout_marginEnd="@dimen/dp16w"
                android:layout_marginRight="@dimen/dp16w"
                android:layout_marginBottom="@dimen/dp8w"
                android:scaleType="centerCrop"
                android:src="@drawable/item_success"
                tools:ignore="ContentDescription" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp16w"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_success_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/success_message_title"
                    android:fontFamily="@font/montserrat_bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/sp18" />

                <TextView
                    android:id="@+id/tv_success_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="@string/success_message"
                    android:fontFamily="@font/montserrat_regular"
                    android:textSize="@dimen/sp14" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/btn_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="6dp"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="gone" />

    </LinearLayout>


</layout>
